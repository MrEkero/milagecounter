<body>
    <div class="chat-container">
        <div class="chat-header">TjötGBG</div>
        <div class="chat-box" id="chat-box"></div>
        <div class="chat-input">
            <input type="text" id="user-input" placeholder="Skriv ett meddelande...">
            <button onclick="sendMessage()">Skicka</button>
        </div>
    </div>

    <script>
        const jokes = [
            "Vet du varför måsarna bor vid havet? För om de bodde i stan hade de hetat stadsar!",
            "Vad sa snickaren när han tappade hammaren? Aj, det slog mig just!",
            "Vet du vad snigeln sa när han satt på en sköldpadda? Woho, vilken fart!",
            "Vad gör en elektriker när han är arg? Slår av en propp!",
            "Vet du varför sköldpaddan inte kunde betala notan? För den var pank-sköld!",
            "Hur mycket väger ett spöke? Exakt ett skräck-ogram!",
            "Vad sa den ena fisken till den andra? Låt oss dra, vi är omringade!",
            "Varför tog bakaren med sig en stege? För att nå högre brödgrader!",
            "Vet du varför cykeln inte kunde stå själv? Den var tvåhjulig!",
            "Vad sa den ena tomaten till den andra? Skynda dig, annars ketchup!"
        ];

        function sendMessage() {
            let inputField = document.getElementById("user-input");
            let message = inputField.value.trim();
            if (message !== "") {
                let chatBox = document.getElementById("chat-box");
                let userMessage = document.createElement("div");
                userMessage.textContent = "Du: " + message;
                chatBox.appendChild(userMessage);
                
                let botMessage = document.createElement("div");
                botMessage.textContent = "TjötGBG: " + jokes[Math.floor(Math.random() * jokes.length)];
                chatBox.appendChild(botMessage);
                
                inputField.value = "";
                chatBox.scrollTop = chatBox.scrollHeight;
            }
        }
    </script>
</body>
</html>
